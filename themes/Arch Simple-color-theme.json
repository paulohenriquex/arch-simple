{
  "name": "Arch Simple",
  "type": "dark",
  "colors": {
    "editor.background": "#1e1e2e",
    "editor.foreground": "#f8f7f2",
    "editor.lineHighlightBackground": "#484848"
  },
  "tokenColors": [
    {
      "name": "Default Text (Fallback)",
      "scope": ["*"],
      "settings": { "foreground": "#f7f6ef" }
    },
    {
      "name": "Comments",
      "scope": ["comment", "comment.line", "comment.block", "comment.block.documentation"],
      "settings": { "foreground": "#999999", "fontStyle": "italic" }
    },
    {
      "name": "Strings, including in JSON values",
      "scope": ["string", "string.quoted", "string.template", "string.unquoted", "punctuation.definition.string"],
      "settings": { "foreground": "#f8f2a0" }
    },
    {
      "name": "Numbers and Language Constants (Booleans, Null)",
      "scope": ["constant.numeric", "constant.language", "constant.language.boolean"],
      "settings": { "foreground": "#ffffff" }
    },
    {
      "name": "Keywords and Storage Types",
      "scope": [
        "keyword", "keyword.control", "storage",
        "storage.type", "storage.modifier"
      ],
      "settings": { "foreground": "#fa7c9a" }
    },
    {
      "name": "Functions and Methods (Names & Calls)",
      "scope": [
        "entity.name.function", "support.function", "meta.function-call",
        "meta.function-call entity.name.function", "variable.function"
      ],
      "settings": { "foreground": "#69ffb4" }
    },
    {
      "name": "Parentheses ()",
      "scope": [
        "meta.paren.js",
        "punctuation.parenthesis"
      ],
      "settings": { "foreground": "#bf00ff" }
    },
    {
      "name": "Square Brackets []",
      "scope": [
        "meta.brackets",
        "punctuation.definition.array",
        "punctuation.section.array.begin",
        "punctuation.section.array.end"
      ],
      "settings": { "foreground": "#87ceeb" }
    },
    {
      "name": "Curly Braces {}",
      "scope": [
        "meta.brace",
        "punctuation.section.block",
        "punctuation.definition.block"
      ],
      "settings": { "foreground": "#98fb98" }
    },
    {
      "name": "Other Punctuation (commas, terminators)",
      "scope": [
        "punctuation.terminator",
        "punctuation.separator",
        "punctuation.accessor"
      ],
      "settings": { "foreground": "#f8f7f3" }
    },
    {
      "name": "Import Statements & Modules (Generic - Gray)",
      "scope": ["meta.import", "keyword.control.import", "keyword.control.export", "keyword.control.from"],
      "settings": { "foreground": "#B5B5B5" }
    },

    // == HTML Specific ==
    {
      "name": "HTML: Tags",
      "scope": ["entity.name.tag.html", "punctuation.definition.tag"],
      "settings": { "foreground": "#fa7c9a" }
    },
    {
      "name": "HTML: Attribute Names",
      "scope": ["entity.other.attribute-name.html"],
      "settings": { "foreground": "#69ffb4" }
    },

    // == CSS Specific ==
    {
      "name": "CSS: Selectors",
      "scope": [
        "entity.name.tag.css", "entity.other.attribute-name.class.css",
        "entity.other.attribute-name.id.css"
      ],
      "settings": { "foreground": "#fa7c9a", "fontStyle": "italic" }
    },
    {
      "name": "CSS: Property Names",
      "scope": ["support.type.property-name.css"],
      "settings": { "foreground": "#69ffb4" }
    },

    // == JSON Specific ==
    {
      "name": "JSON: Property Keys (Names)",
      "scope": ["support.type.property-name.json", "punctuation.support.type.property-name.begin", "punctuation.support.type.property-name.end"],
      "settings": { "foreground": "#69ffb4" }
    },
    {
      "name": "JSON: Key-Value Separator",
      "scope": ["punctuation.separator.dictionary.key-value.json"],
      "settings": { "foreground": "#fa7c9a" }
    },

    // == Java Specific (Imports/Annotations) ==
    {
      "name": "Java: Imports, Packages, and Annotations (White)",
      "scope": [
        "source.java keyword.other.package",
        "source.java storage.modifier.package",
        "source.java keyword.other.import",
        "source.java storage.modifier.import",
        "source.java storage.type.annotation"
      ],
      "settings": {
        "foreground": "#FFFFFF"
      }
    },

    // == Markdown Specific ==
    {
      "name": "Markdown: Headings",
      "scope": ["heading.markup", "markup.heading", "punctuation.definition.heading.markdown"],
      "settings": { "foreground": "#fa7c9a", "fontStyle": "bold" }
    },
    {
      "name": "Markdown: Bold",
      "scope": "markup.bold",
      "settings": { "foreground": "#69ffb4", "fontStyle": "bold" }
    },
    {
      "name": "Markdown: Italic",
      "scope": "markup.italic",
      "settings": { "foreground": "#f7f6ef", "fontStyle": "italic" }
    },
    {
      "name": "Markdown: Link Text",
      "scope": ["string.other.link.description.markdown", "markup.underline.link"],
      "settings": { "foreground": "#87ceeb", "fontStyle": "underline" }
    },
    {
        "name": "Markdown: Link URL",
        "scope": ["string.other.link.title.markdown", "markup.link"],
        "settings": { "foreground": "#999999" }
    },
    {
      "name": "Markdown: Inline and Fenced Code",
      "scope": ["markup.inline.raw.string.markdown", "markup.fenced_code.block.markdown"],
      "settings": { "foreground": "#B5B5B5" }
    },
    {
      "name": "Markdown: Blockquotes",
      "scope": ["markup.quote", "punctuation.definition.quote.begin"],
      "settings": { "foreground": "#999999", "fontStyle": "italic" }
    },
    {
      "name": "Markdown: List bullets",
      "scope": ["punctuation.definition.list.begin.markdown"],
      "settings": { "foreground": "#bf00ff" }
    }
  ]
}