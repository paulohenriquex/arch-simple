{
  "name": "Arch Simple",
  "type": "dark",
  "colors": {
    "editor.background": "#282A36",
    "editor.foreground": "#ffffff",
    "editor.lineHighlightBackground": "#444444"
  },
  "tokenColors": [
    {
      "name": "Default Text (Fallback)",
      "scope": ["*"],
      "settings": { "foreground": "#e0e0e0" }
    },
    {
      "name": "Comments",
      "scope": ["comment", "comment.line", "comment.block", "comment.block.documentation"],
      "settings": { "foreground": "#999999", "fontStyle": "italic" }
    },
    {
      "name": "Strings",
      "scope": ["string", "string.quoted", "string.template", "string.unquoted"],
      "settings": { "foreground": "#e5ece3" }
    },
    {
      "name": "Numbers and Language Constants (Booleans, Null)",
      "scope": ["constant.numeric", "constant.language", "constant.language.boolean"],
      "settings": { "foreground": "#ffffff" }
    },
    {
      "name": "Keywords and Storage Types",
      "scope": [
        "keyword", "keyword.control", "storage",
        "storage.type", "storage.modifier" 
      ],
      "settings": { "foreground": "#d0f7c5" }
    },
    {
      "name": "Functions and Methods (Names & Calls)",
      "scope": [
        "entity.name.function", "support.function", "meta.function-call",
        "meta.function-call entity.name.function", "variable.function"
      ],
      "settings": { "foreground": "#FF79C6" }
    },
    {
      "name": "Parentheses ()",
      "scope": [
        "meta.paren.js",
        "punctuation.parenthesis"
      ],
      "settings": {
        "foreground": "#ffd700"
      }
    },
    {
      "name": "Square Brackets []",
      "scope": [
        "meta.brackets",
        "punctuation.definition.array",
        "punctuation.section.array.begin",
        "punctuation.section.array.end"
      ],
      "settings": {
        "foreground": "#87ceeb"
      }
    },
    {
      "name": "Curly Braces {}",
      "scope": [
        "meta.brace",
        "punctuation.section.block",
        "punctuation.definition.block"
      ],
      "settings": {
        "foreground": "#98fb98"
      }
    },
    {
      "name": "Other Punctuation (commas, terminators)",
      "scope": [
        "punctuation.terminator",
        "punctuation.separator",
        "punctuation.accessor"
      ],
      "settings": {
        "foreground": "#f9ec77" //999999
      }
    },
    {
      "name": "Import Statements & Modules (Entire Line)",
      "scope": [
        "keyword.control.import", "keyword.control.export", "keyword.control.from",
        "keyword.other.import", "keyword.other.package", "meta.import",
        "storage.modifier.import.java", "meta.import storage.type",
        "meta.import entity.name.type", "meta.import variable.other.object",
        "meta.import punctuation.accessor", "meta.import punctuation.terminator",
        "storage.type.import"
      ],
      "settings": {
        "foreground": "#B5B5B5"
      }
    },

    // == HTML Specific ==
    {
      "name": "HTML: Tags",
      "scope": ["entity.name.tag.html", "meta.tag.structure.any.html entity.name.tag.html", "meta.tag.metadata.doctype.html entity.name.tag.html"],
      "settings": { "foreground": "#9c999e" }
    },
    {
      "name": "HTML: Attribute Names",
      "scope": ["entity.other.attribute-name.html"],
      "settings": { "foreground": "#c792ea" }
    },
    {
      "name": "HTML: Punctuation for Tags (<, >, /)",
      "scope": ["punctuation.definition.tag.begin.html", "punctuation.definition.tag.end.html"],
      "settings": { "foreground": "#00ffff" }
    },

    // == CSS Specific ==
    {
      "name": "CSS: Selectors (Tags, Classes, IDs, Pseudo-classes)",
      "scope": [
        "entity.name.tag.css", "entity.other.attribute-name.class.css",
        "entity.other.attribute-name.id.css", "entity.name.pseudo-class.css",
        "entity.name.pseudo-element.css"
      ],
      "settings": { "foreground": "#66ff99" }
    },
    {
      "name": "CSS: Property Names",
      "scope": ["support.type.property-name.css"],
      "settings": { "foreground": "#c792ea" }
    },
    {
      "name": "CSS: Property Values (Keywords, Units, some Colors)",
      "scope": ["support.constant.property-value.css", "keyword.other.unit.css"],
      "settings": { "foreground": "#ffffff" }
    },
    {
      "name": "CSS: At-Rules (@media, @import, @font-face)",
      "scope": ["keyword.control.at-rule.css", "punctuation.definition.keyword.css"],
      "settings": { "foreground": "#9c999e", "fontStyle": "italic" }
    },

    // == JSON Specific ==
    {
      "name": "JSON: Property Keys (Names)",
      "scope": ["support.type.property-name.json"],
      "settings": { "foreground": "#c792ea" }
    },
    {
      "name": "JSON: Structural Punctuation",
      "scope": [
        "punctuation.definition.dictionary.begin.json", "punctuation.definition.dictionary.end.json",
        "punctuation.definition.array.begin.json", "punctuation.definition.array.end.json",
        "punctuation.separator.dictionary.key-value.json", "punctuation.separator.dictionary.pair.json"
      ],
      "settings": { "foreground": "#00ffff" }
    }
  ]
}